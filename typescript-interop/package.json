{
  "name": "capnweb-rust-interop-tests",
  "version": "1.0.0",
  "description": "TypeScript client integration tests for Cap'n Web Rust implementation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "test": "pnpm build && node dist/test-runner.js",
    "test:watch": "tsup --watch & nodemon dist/test-runner.js",
    "test:official": "pnpm build && node dist/official-client-test.js",
    "test:advanced": "pnpm build && node dist/advanced-server-test.js",
    "test:pipelining": "pnpm build && node dist/promise-pipelining-test.js",
    "test:comprehensive": "pnpm build && node dist/comprehensive-test-runner.js",
    "test:tier2": "pnpm build && node dist/tier2-stateful-sessions.js",
    "test:tier2-websocket": "pnpm build && node dist/tier2-websocket-tests.js",
    "test:tier3": "pnpm build && node dist/tier3-complex-applications.js",
    "test:tier3-websocket": "pnpm build && node dist/tier3-websocket-advanced.js",
    "test:cross-transport": "pnpm build && node dist/cross-transport-interop.js",
    "test:tier3-extreme": "pnpm build && node dist/tier3-extreme-stress.js",
    "test:tier3-capability": "pnpm build && node dist/tier3-capability-composition.js",
    "test:advanced-features": "pnpm build && node dist/advanced-features-demo.js",
    "test:all": "pnpm test:comprehensive",
    "test:ultimate": "pnpm test:tier3-extreme",
    "demo:advanced": "pnpm test:advanced-features",
    "clean": "rm -rf dist",
    "start:rust-server": "cd .. && cargo run --example protocol_server -p capnweb-server",
    "start:advanced-server": "cd .. && cargo run --example advanced_stateful_server -p capnweb-server",
    "interop": "pnpm build && node dist/interop-tests.js"
  },
  "dependencies": {
    "capnweb": "^0.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.12",
    "nodemon": "^3.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "capnweb",
    "rpc",
    "rust",
    "typescript",
    "interoperability"
  ],
  "author": "Cap'n Web Rust Team",
  "license": "MIT OR Apache-2.0"
}